<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_update_sale_order" model="ir.ui.view">
		<field name="name">update.sales.view.form</field>
		<field name="model">update.sales</field>
		<field name="arch" type="xml">
			<form string="Update Purchase Order">
				<sheet>
					<group>
						<group>
							<field name="so_order_id" options="{'no_create_edit': True}" style="pointer-events: none;"/>
						</group>
						<field name="sale_line_ids">
							<tree editable="bottom" create="false">
								<field name="product_id" options="{'no_create_edit': True}" style="pointer-events: none;"/>
								<field name="quoted_price" style="pointer-events: none;"/>
								<field name="final_price" required="1"/>
								<field name="id_sale_order_line" invisible="1"/>
							</tree>
						</field>
					</group>
				</sheet>
				<footer>
					<button name="update_sale_order" string="Update" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>


	<record id="action_update_so_order" model="ir.actions.act_window">
		<field name="name">Update Sale Order</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">update.sales</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_update_sale_order"/>
		<field name="target">new</field>
	</record>

</odoo>