<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="purchase_order_form_change_button" model="ir.ui.view">
            <field name="name">purchase.order.form.change_button</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button name="%(action_purchase_voucher_wizard)d" string="Pay Purchase Advance" class="btn-primary"
                        type="action" groups="account.group_account_invoice" invisible="1"/>
                </header>
                <notebook position="inside">
                    <page string="Advance Payment" groups="account.group_account_invoice" invisible="1">
                        <field name="account_payment_ids" nolabel="1" colspan="4"
                               context="{'form_view_ref': 'account.view_account_payment_form','tree_view_ref': 'account.view_account_supplier_payment_tree'}"/>
                    </page>
                </notebook>

            </field>
        </record>

</odoo>
