<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_approve_bills" model="res.groups">
        <field name="name">Approve Bills</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="rule_security_approve_bills" model="ir.rule">
        <field name="name">User can't edit or create bills.</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[('approver_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('bills_approval.group_approve_bills'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0" />
    </record>

</odoo>