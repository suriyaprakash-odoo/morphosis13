<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="transport_popup_sale_form_view" model="ir.ui.view">
			<field name="name">transport.popup.sale.form</field>
			<field name="model">transport.popup.sale</field>
			<field name="arch" type="xml">
				<form string="Transport Popup">
					<sheet>
						<group>
							<group>
								<field name="pickup_partner_id" invisible="1"/>
								<field name="delivery_partner_id" required="1"/>
								<field name="collection_date_type" required="1"/>
								<field name='pickup_date' attrs="{'invisible' : [('collection_date_type' , '!=' , 'specific')],'required' : [('collection_date_type' , '=' , 'specific')]}"/>
								<field name='pickup_earliest_date' attrs="{'invisible' : [('collection_date_type' , '!=' , 'between')],'required' : [('collection_date_type' , '=' , 'between')]}"/>
								<field name='pickup_latest_date' attrs="{'invisible' : [('collection_date_type' , '!=' , 'between')],'required' : [('collection_date_type' , '=' , 'between')]}"/>
								<field name="gross_weight" required="1"/>
								<field name="waste_code" required="1"/>
							</group>
							<group>
								<field name="material" required="1"/>
								<field name="container_count" required="1"/>
								<field name="no_of_container" attrs="{
									'invisible': [('container_count', 'not in', ['specified'])],'required': [('container_count', '=', 'specified')]}"/>
								<field name="linear_meter" attrs="{
									'invisible': [('container_count', 'not in', ['specified'])],'required': [('container_count', '=', 'specified'),('is_full_load','=',False)]}"/>
								<field name="dimension" required="1" string="colisage ( nombres de contenants + dimensions )"/>
								<field name="lorry_type" required="1"/>

								<field name="is_full_load"/>
								<label for='is_tail_lift' string="Tail-Lift"/>
								<div>
									<field name='is_tail_lift' class="oe_inline"/>
									<field name='hayons' attrs="{
										'invisible': [('is_tail_lift', '=', False)],
										'required': [('is_tail_lift', '!=', False)]
										}" class="oe_inline"/>
								</div>
								
							</group>

							
						</group>
						<group string="Notes">
							<field name="note" nolabel="1" />
						</group>
					</sheet>
					<footer>
						<button name="send_transport_notificaton" string="Update Transport Details &amp; Send Mail" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-secondary" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>


		<record id="transport_popup_sale_action" model="ir.actions.act_window">
			<field name="name">Transport Popup</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">transport.popup.sale</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="transport_popup_sale_form_view"/>
			<field name="target">new</field>
		</record>


	</data>
</odoo>