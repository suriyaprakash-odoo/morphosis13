	<record id="psm_pricelist_act_window" model="ir.actions.act_window">
		<field name="name">PSM Pricelists</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">psm.pricelist</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				There is no examples click here to add new ModelTitle.
			</p>
		</field>
	</record>

	<menuitem name="PSM Pricelists" id="psm_pricelist_menu" parent="purchase.menu_purchase_config" action="psm_pricelist_act_window"/>


	<record id="psm_view_update_purchase_order" model="ir.ui.view">
		<field name="name">update.purchase.order.form</field>
		<field name="model">update.purchase.order</field>
		<field name="inherit_id" ref="ppts_inventory_customization.view_update_purchase_order"/>
		<field name="arch" type="xml">
			<xpath expr="//group/group[1]" position="after">
				<group>
					<field name="psm_pricelist" options="{'no_create_edit': True}"/>
				</group>
			</xpath>
		</field>
	</record>

</odoo>