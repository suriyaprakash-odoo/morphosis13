<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="psm_pricelist_form_view" model="ir.ui.view">
		<field name="name">psm_pricelist.form</field>
		<field name="model">psm.pricelist</field>
		<field name="arch" type="xml">
			<form string="PSM Pricelist">
				<sheet>
					<widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
					<div class="oe_title">
						<label for="name"/>
						<h1>
							<field name="name" placeholder="Pricelist Name" required="1"/>
						</h1>
					</div>
					<group>
						<group>
							<field name="start_date" required="1"/>
							<field name="end_date" required="1"/>
						</group>
						<group>
							<field name="active"/>
							<field name="company_id"/>
						</group>
					</group>

					<notebook>
						<page string="Pricelist Line">
							<field name="pricelist_line">
								<tree editable="bottom">
									<field name="product_id" required="1"/>
									<field name="price" required="1"/>
								</tree>
								<form>
									<group>
										<field name="product_id" required="1"/>
										<field name="price" required="1"/>
									</group>
								</form>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="psm_pricelist_tree_view" model="ir.ui.view">
		<field name="name">psm_pricelist.tree</field>
		<field name="model">psm.pricelist</field>
		<field name="arch" type="xml">
			<tree string="PSM Pricelist">
				<field name="name"/>
				<field name="start_date"/>
				<field name="end_date"/>
				<field name="company_id"/>
			</tree>
		</field>
	</record>

