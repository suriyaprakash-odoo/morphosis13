<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_complete_vrac_process" model="ir.ui.view">
        <field name="name">vrac.process.view.form</field>
        <field name="model">complete.vrac</field>
        <field name="arch" type="xml">
            <form string="Complete VRAC Process">
            	<sheet>
					<group>
						<group>
							<field name="internal_project_id" />
							<field name="recipient_container_id" required="1" />
						</group>
						<group>
							<field name="product_id" />
							<field name="operator_id" required="1" />
						</group>
					</group>
				</sheet>
                <footer>
                    <button name="action_complete_vrac_process" string="Complete VRAC Process" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
			</form>
		</field>
	</record>


	<record id="action_complete_vrac_process" model="ir.actions.act_window">
		<field name="name">Complete VRAC Process</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">complete.vrac</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_complete_vrac_process" />
		<field name="target">new</field>
	</record>

</odoo>