<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_incoming_shipment_report" model="ir.ui.view">
            <field name="name">incoming.shipment.report.form</field>
            <field name="model">incoming.shipment.report</field>
            <field name="arch" type="xml">
                <form string="Incoming Shipment Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="from_date" required="1" />
                            </group>
                            <group>
                                <field name="to_date" required="1" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="view_incoming_shipment_report" string="Generate Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_incoming_shipment_report" model="ir.actions.act_window">
            <field name="name">Incoming Shipment Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">incoming.shipment.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_incoming_shipment_report" />
            <field name="target">new</field>
        </record>

        <menuitem name="Incoming Shipment Report" id="menu_incoming_shipment_report" parent="ppts_inventory_customization.menu_project_report" action="action_incoming_shipment_report"/>

        <record id="incoming_shipment_report_tree_view" model="ir.ui.view">
            <field name="name">incoming.shipment.wizard.report.tree</field>
            <field name="model">incoming.shipment.wizard.report</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name = 'project_name'/>
                    <field name = 'shipment_name'/>
                    <field name = 'donor_container_name'/>
                    <field name = 'recipent_container_name'/>
                    <field name = 'container_type_name'/>
                    <field name = 'gross_weight'/>
                    <field name = 'net_weight'/>
                </tree>
            </field>
        </record>

    </data>
</odoo>