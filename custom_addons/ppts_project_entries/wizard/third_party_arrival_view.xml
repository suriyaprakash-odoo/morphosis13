<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_third_party_arrival" model="ir.ui.view">
		<field name="name">third.party.arrival.form</field>
		<field name="model">third.party.arrival</field>
		<field name="arch" type="xml">
			<form string="Third Party Arrival Plan">
				<sheet>
					<group>
						<group>
							<field name="project_id" required="1"/>
						</group>
						<group>
							<field name="arrival_date" required="1"/>
							<label for='expected_delivery_start_time' string="Time Duration"/>
							<div>
								<field name='expected_delivery_start_time' style="width:15%" widget="float_time"/>
								-
								<field name='expected_delivery_end_time' style="width:15%" widget="float_time"/>
							</div>
						</group>
					</group>
					<field name="exist" invisible="1"/>
					<div class="alert alert-warning" role="alert" attrs="{'invisible': [('exist', '=', False)]}" style="font-weight: bold;font-size: 14px;">
						<field name="note" readonly="1" attrs="{'invisible': [('exist', '=', False)]}" />
					</div>
					<group>
						<field name="transport_id" readonly="1" attrs="{'invisible': [('exist', '=', False)]}"/>
						<field name="planned_date" readonly="1" attrs="{'invisible': [('exist', '=', False)]}"/>
						<field name="action" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('exist', '=', False)]}"/>
					</group>
				</sheet>
				<footer>
					<button name="plan_arrival" string="Confirm" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_third_party_arrival_plan" model="ir.actions.act_window">
		<field name="name">Third Party Arrival Plan</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">third.party.arrival</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_third_party_arrival"/>
		<field name="target">new</field>
	</record>

</odoo>