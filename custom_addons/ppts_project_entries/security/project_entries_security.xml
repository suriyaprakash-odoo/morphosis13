<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

	    <record model="ir.module.category" id="module_category_operations_project_entries">
	        <field name="name">Project Entries</field>
	        <field name="sequence">10</field>
	    </record>

	    <record id="group_project_entries_production_user" model="res.groups">
	        <field name="name">Production User</field>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	        <field name="category_id" ref="module_category_operations_project_entries"/>
	    </record>

	    <record id="group_project_entries_user" model="res.groups">
	        <field name="name">User</field>
	        <field name="implied_ids" eval="[(4, ref('group_project_entries_production_user'))]"/>
	        <field name="category_id" ref="module_category_operations_project_entries"/>
	    </record>

	    <record id="group_project_entries_officer" model="res.groups">
	        <field name="name">Officer</field>
	        <field name="implied_ids" eval="[(4, ref('group_project_entries_user'))]"/>
	        <field name="category_id" ref="module_category_operations_project_entries"/>
	    </record>

	    <record id="group_project_entries_manager" model="res.groups">
	        <field name="name">Manager</field>
	        <field name="implied_ids" eval="[(4, ref('group_project_entries_officer'))]"/>
	        <field name="category_id" ref="module_category_operations_project_entries"/>
	    </record>

		<record id="project_entries_officer_record_rule" model="ir.rule">
            <field name="name">project_entries</field>
            <field name="model_id" ref="ppts_project_entries.model_project_entries" />
            <field name="groups" eval="[(4, ref('ppts_project_entries.group_project_entries_officer'))]"/>
            <field name="domain_force">['|',('user_id','=',user.id),('user_id','child_of',[user.id])]</field>
            <field eval="True" name="active" />
	        <field name="perm_create" eval="1"/>
	        <field name="perm_write" eval="1"/>
	        <field name="perm_unlink" eval="0"/>
	        <field name="perm_read" eval="1"/>
        </record>

		<record id="project_entries_manager_record_rule" model="ir.rule">
            <field name="name">project_entries</field>
            <field name="model_id" ref="ppts_project_entries.model_project_entries" />
            <field name="groups" eval="[(4, ref('ppts_project_entries.group_project_entries_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field eval="True" name="active" />
	        <field name="perm_create" eval="1"/>
	        <field name="perm_write" eval="1"/>
	        <field name="perm_unlink" eval="1"/>
	        <field name="perm_read" eval="1"/>
        </record>

	</data>
</odoo>
