									'readonly': [('status', 'not in', ['new'])]
									}"/>
								<field name='delivery_licence_plate' attrs="{
									'invisible': [('tranport_mode', 'in', ['direct','route'])],
									'required': [('tranport_mode', 'not in', ['direct','route'])],
									'readonly': [('status', 'not in', ['new'])]
