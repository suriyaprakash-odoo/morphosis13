								<field name="adr_num" attrs="{
									'required': [('is_adr', '=', True)],
									'invisible': [('is_adr', '!=', True)],
									'readonly': [('status', 'not in', ['new'])]
									}" />			-->
								<label for='bsdannex' string="BSD/Annexe7"/>
