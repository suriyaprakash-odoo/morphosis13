									'readonly': [('status', 'not in', ['new'])],
									'required': [('pickup_date_type', 'in', ['between'])],
									'invisible': [('pickup_date_type', 'not in', ['between'])]
									}"/>
								<!-- <field name='company_id' attrs="{'readonly': [('status', 'not in', ['new'])]}" options="{'no_create_edit': True}" /> -->
								<!-- <field name='logistics_for' attrs="{'readonly': [('status', 'not in', ['new'])]}" /> -->
								<field name="gross_weight" attrs="{'readonly': [('status', 'not in', ['new'])]}"/>
								<field name='transporter_id' attrs="{'readonly': [('status', 'not in', ['new'])]}"/>
								<field name='client_feedback_score' widget="priority" attrs="{'readonly': [('status', 'not in', ['new'])]}"/>
								<field name="waste_code" required="1" attrs="{'readonly': [('status', 'not in', ['new'])]}"/>
