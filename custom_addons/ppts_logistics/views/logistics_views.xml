								<field name="adr_class_id" attrs="{
									'required': [('is_adr', '=', True)],
									'invisible': [('is_adr', '!=', True)],
									'readonly': [('status', 'not in', ['new'])]
									}" />
								<field name="adr_pickup_type_id" attrs="{
									'required': [('is_adr', '=', True)],
									'invisible': [('is_adr', '!=', True)],
									'readonly': [('status', 'not in', ['new'])]
									}" />
								<field name="hazard_type_id" attrs="{
									'required': [('is_adr', '=', True)],
									'invisible': [('is_adr', '!=', True)],
									'readonly': [('status', 'not in', ['new'])]
