									icon="fa-money" string="Transport PO" attrs="{'invisible': ['|',('is_3rd_party','!=',False),('status', 'not in', ['approved','delivered'])]}">
							</button>
							<button name="action_view_shipment"
									type="object"
									class="oe_stat_button"
									icon="fa-truck" string="View Shipment" attrs="{'invisible': ['|',('is_3rd_party','!=',False),('status', 'not in', ['approved','delivered'])]}">
							</button>
						</div>
						<div style="height: 150px;width: 185px;position: absolute;overflow: hidden;right: 0;margin-top: -23px;">
							<field name="success_msg" attrs="{'invisible': [('status', 'not in', ['approved','delivered'])]}"
