								<field name='delivery_partner_location_id' options="{'no_create_edit': True}"/>
								<label for="street" string="Delivery Address"/>
								<div class="o_address_format">
									<field name="delivery_street" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('status', 'not in', ['new'])]}" required="1"/>
									<field name="delivery_street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('status', 'not in', ['new'])]}"/>
									<field name="delivery_city" placeholder="City" class="o_address_city" attrs="{'readonly': [('status', 'not in', ['new'])]}" required="1"/>
