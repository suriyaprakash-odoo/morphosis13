							</group>
							<group>
								<field name='container_type' attrs="{
									'invisible': [('lorry_type', 'not in', ['container'])],
									'required': [('lorry_type', 'in', ['container']),('tranport_mode' , 'in' , ['sea'])],
									'readonly': [('status', 'not in', ['new'])]
