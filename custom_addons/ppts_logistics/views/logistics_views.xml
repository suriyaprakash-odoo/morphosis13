									<field name='morning_opening_hours_end' style="width:15%" attrs="{'readonly' : [('status', 'not in' , 'new')]}"/>
								</div>
								<label for='evening_opening_hours_start' string="Evening Opening Hours"/>
								<div>
									<field name='evening_opening_hours_start' style="width:15%" attrs="{'readonly' : [('status', 'not in' , 'new')]}"/>
									-
									<field name='evening_opening_hours_end' style="width:15%" attrs="{'readonly' : [('status', 'not in' , 'new')]}"/>
								</div>
								<field name="is_adr" attrs="{'readonly': [('status', 'not in', ['new'])]}"/>
