									<field name='bsdannex' style="width:50%"/>
									<button name="print_bsd_report" id="print_bsd_report" string="Print BSD" class="btn-primary" type="object" attrs="{'invisible': [('bsdannex', 'not in', ['bsd'])]}" style="width:48%"/>
									<button name="print_annux_report" id="print_annux_report" string="Print Annexe7" class="btn-primary" type="object" attrs="{'invisible': [('bsdannex', 'not in', ['annux7'])]}" style="width:48%"/>
								</div>
							</group>
							<group>
								<field name="is_3rd_party" invisible="1"/>
