<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Sequences for logistics.management -->
		<record id="seq_logistics_management" model="ir.sequence">
			<field name="name">Logistics Management</field>
			<field name="code">logistics.management</field>
			<field name="prefix">T</field>
			<field name="padding">5</field>
			<field name="company_id" eval="False"/>
		</record>
		<record id="logistics_management_form_view" model="ir.ui.view">
			<field name="name">logistics.management.form</field>
			<field name="model">logistics.management</field>
			<field name="arch" type="xml">
				<form string="Logistics Management">
					<header>
						<field name="status" widget="statusbar" statusbar_visible='new,request,approved,delivered'/>
						<button name="action_send_transport_rfq" id="action_send_transport_rfq"
								string="Send RFQ" class="btn-primary" type="object" attrs="{'invisible': [('status', 'not in', ['new'])]}" groups="ppts_logistics.group_logistics_manager"/>
						<button name="action_approve_request" id="action_approve_request"
								string="Approve and Create PO" class="btn-primary" type="object" attrs="{'invisible': [('status', 'not in', ['new','request'])]}"
								groups="ppts_logistics.group_logistics_manager"/>
						<button name="action_reject_request" id="action_reject_request"
								string="Reject" class="btn-danger" type="object" attrs="{'invisible': [('status', 'not in', ['request'])]}" groups="ppts_logistics.group_logistics_manager"/>
						<button name="%(ppts_logistics.action_update_container_details)d" string="Update Container Details" type="action" class="oe_highlight"
