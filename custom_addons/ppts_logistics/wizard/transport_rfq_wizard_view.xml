<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_create_transport_rfq" model="ir.ui.view">
        <field name="name">transport.rfq.view.form</field>
        <field name="model">transport.rfq</field>
        <field name="arch" type="xml">
            <form string="Create Transport PO">
            	<sheet>
					<group>
						<group>
							<field name="partner_id" required="1" options="{'no_create_edit': True}" />
							<field name="product_id" required="1" options="{'no_create_edit': True}" />
						</group>
						<group>
							<field name="quoted_price" required="1" />
							<field name="currency_id" invisible="1"/>
						</group>
					</group>
					<group>
						<field name="add_cost_existing_po" invisible="1"/>
					</group>
				</sheet>
                <footer>
                    <button name="create_transport_po" string="Approve and Create PO" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
			</form>
		</field>
	</record>


