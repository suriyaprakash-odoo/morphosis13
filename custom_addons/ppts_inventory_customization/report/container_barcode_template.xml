<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="stock_container_barcode_template">
            <div style="width: 100%; display: inline-table; height: 100%;">
                <table class="table table-bordered mb-0" style="border: 2px solid black;">
                    <tr>
                        <th class="table-active text-left" style="height: 50%;">
                            <span>Code Contenant Odoo </span><strong t-field="containers.name"/><br/>
                            <span>Brut </span><strong t-field="containers.net_weight"/><span> </span>
                            <span>Tare </span><strong t-field="containers.tare_weight"/><span> </span>
                            <span>Net </span><strong t-field="containers.net_weight"/><br/>
                            <!-- <span>Poids Brut </span><strong t-field="containers.net_weight"/><br/>
                            <span>Poids Tare </span><strong t-field="containers.tare_weight"/><br/> -->
                            <span>Matière </span><strong t-field="containers.content_type_id.name"/><br/>
                            <span>Sous-Matière </span><strong t-field="containers.content_type_id.product_template_attribute_value_ids.name"/>
                        </th>
                    </tr>
                    <tr>
                        <td class="text-center align-middle" style="height: 58%;">
                            <t t-if="containers.name">
                                <img alt="Barcode" t-if="len(containers.name) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', containers.name, 600, 250)" style="width:100%;height:58%;"/>
                                <img alt="Barcode" t-elif="len(containers.name) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', containers.name, 600, 250)" style="width:100%;height:58%;"/>
                                <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', containers.name, 600, 250)" style="width:100%;height:58%"/>
                                <!-- <span t-field="containers.name"/> -->
                            </t>
                            <t t-else=""><span class="text-muted">No barcode available</span></t>
                        </td>
                    </tr>
                </table>
            </div>
        </template>

        <template id="stock_container_barcode_report">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="containers">
                        <t t-call="ppts_inventory_customization.stock_container_barcode_template">
                            <t t-set="containers" t-value="containers"/>
                        </t>
                    </t>
                </div>
            </t>
        </template>

        <template id="project_container_barcode_template">
            <div style="width: 100%; display: inline-table; height: 100%">
                <table class="table table-bordered mb-0" style="border: 2px solid black;">
                    <tr>
                        <th class="table-active text-left" style="height:40%;">
                            <span><strong t-field="containers.name"/><br/></span>
                            <span>Brut </span><strong t-field="containers.gross_weight"/><span> </span>
                            <span>Tare </span><span t-if="extra_tare"><strong t-field="containers.extra_tare"/></span><span t-else=""><strong t-field="containers.container_type_id.tare_weight"/></span><span> </span>
                            <span>Net </span><strong t-field="containers.net_gross_weight"/><br/>
                            <!-- <span>Code Déchet</span><strong t-field="containers.sub_product_id.product_waste_code"/><br/> -->
                            <span>Matière </span><strong t-field="containers.main_product_id.name"/><span> </span>
                            <span>Sous-Matière </span><strong t-field="containers.sub_product_id.name"/><br/>
                            <span>Description </span><strong t-field="containers.description"/><br/>
                        </th>
                    </tr>
                    <tr>
                        <td class="text-center align-middle" style="height:90%">
                            <t t-if="containers.name">
                                <img alt="Barcode" t-if="len(containers.name) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', containers.name, 600, 250)" style="width:100%;height:50%;"/>
                                <img alt="Barcode" t-elif="len(containers.name) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', containers.name, 600, 250)" style="width:100%;height:50%;"/>
                                <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', containers.name, 600, 250)" style="width:100%;height:50%"/>
                                <!-- <span t-field="containers.name"/> -->
                            </t>
                            <t t-else=""><span class="text-muted">No barcode available</span></t>
                        </td>
                    </tr>
                </table>
            </div>
        </template>

        <template id="project_container_barcode_report">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="containers">
                        <t t-call="ppts_inventory_customization.project_container_barcode_template">
                            <t t-set="containers" t-value="containers"/>
                        </t>
                    </t>
                </div>
            </t>
        </template>

    </data>
</odoo>