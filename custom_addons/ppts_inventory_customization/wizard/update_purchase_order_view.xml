<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_update_purchase_order" model="ir.ui.view">
        <field name="name">update.purchase.order.view.form</field>
        <field name="model">update.purchase.order</field>
        <field name="arch" type="xml">
            <form string="Update Purchase Order">
            	<sheet>
					<group>
						<group>
							<field name="purchase_id" style="pointer-events: none;" />
							<field name="shipment_id" style="pointer-events: none;" />
						</group>
						<!-- <field name="product_line_ids" string="Update Product Quantity">
							<tree editable="bottom" create="false" delete="false">
								<field name="line_id" options="{'no_create_edit': True}" style="pointer-events: none;" invisible="1" />
								<field name="product_id" options="{'no_create_edit': True}" style="pointer-events: none;" />
								<field name="po_qty"  style="pointer-events: none;" />
								<field name="po_qty_uom" options="{'no_create_edit': True}" style="pointer-events: none;" />
								<field name="container_qty" style="pointer-events: none;" />
							</tree>
						</field>
						<separator string="Non Product Line" /> -->
						<field name="non_po_line_ids">
							<tree editable="bottom">
								<field name="product_id" options="{'no_create_edit': True}" />
								<field name="po_qty" />
								<field name="fraction_unit_weight" invisible="1" />
								<field name="po_qty_uom" options="{'no_create_edit': True}" />
								<field name="price_unit" />
								<field name="calculated_offer_price" style="pointer-events: none;" />
								<field name="offer_price" required="1" />
							</tree>							
						</field>
					</group>
				</sheet>
                <footer>
                    <button name="update_po" string="Update Purchase Order" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
			</form>
		</field>
	</record>


	<record id="action_update_purchase_order" model="ir.actions.act_window">
		<field name="name">Update Purchase Order</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">update.purchase.order</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_update_purchase_order" />
		<field name="target">new</field>
	</record>

</odoo>