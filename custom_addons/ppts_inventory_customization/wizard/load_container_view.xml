<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_load_container" model="ir.ui.view">
        <field name="name">load.container.view.form</field>
        <field name="model">load.container</field>
        <field name="arch" type="xml">
            <form string="Load Container">
            	<sheet>
					<group>
						<group>
							<field name="truck_container_number" />
							<field name="shipment_weight" />
							<field name="is_sea_transport" />
							<field name="container_seal_number" attrs="{'required': [('is_sea_transport', '=', True)],'invisible': [('is_sea_transport', '!=', True)]}"/>
							<field name="shipment_state" invisible="1"/>
							<field name="weight_at_entry" attrs="{'invisible': [('shipment_state', '!=', 'sorted_treated')]}"/>
							<field name="actual_wt_difference" attrs="{'invisible': [('shipment_state', '!=', 'sorted_treated')]}"/>
						</group>
						<group>
							<field name="sale_logistics_no_of_container" required="1" />
							<field name="pickup_location_id" required="1"/>
							<field name="weight_at_exit" attrs="{'invisible': [('shipment_state', '!=', 'sorted_treated')]}" />
							<button name="get_fractions" string="Get Fractions" type="object" class="btn-primary" attrs="{'invisible': [('shipment_state', '!=', 'sorted_treated')]}"/>
							<field name="update_demand"/>
						</group>
						<field name="container_line_ids">
							<tree editable="bottom" create="false">
								<field name="product_id" required="1" options="{'no_create_edit': True}"/>
								<field name="container_ids" widget="many2many_tags" required="1" options="{'no_create_edit': True}"/>
								<field name="demand" readonly="1" />
								<field name="actual_weight" style="pointer-events: none;" />
								<field name="gross_weight" style="pointer-events: none;" />
							</tree>
						</field>
					</group>
				</sheet>
                <footer>
                    <button name="load_container" string="Update" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
			</form>
		</field>
	</record>


	<record id="action_load_container" model="ir.actions.act_window">
		<field name="name">Load Container</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">load.container</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_load_container" />
		<field name="target">new</field>
	</record>

</odoo>