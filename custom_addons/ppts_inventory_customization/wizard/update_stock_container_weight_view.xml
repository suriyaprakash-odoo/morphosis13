<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_update_stock_container_weight" model="ir.ui.view">
        <field name="name">update.stock.container.wizard.view.form</field>
        <field name="model">update.stock.container.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Weight">
            	<sheet>
					<group>
						<group>
							<field name="new_weight" required="1"/>	
						</group>
					</group>
				</sheet>
                <footer>
                    <button name="update_weight" string="Update" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
			</form>
		</field>
	</record>


	<record id="action_update_stock_container_weight" model="ir.actions.act_window">
		<field name="name">Update Weight</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">update.stock.container.wizard</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_update_stock_container_weight" />
		<field name="target">new</field>
	</record>

</odoo>