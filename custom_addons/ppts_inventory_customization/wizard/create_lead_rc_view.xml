<?xml version="1.0"?>
<odoo>
	<record id="create_leads_wizard_form" model="ir.ui.view">
		<field name="name">create.lead.rc.form</field>
		<field name="model">create.lead.rc</field>
		<field name="arch" type="xml">
			<form string="Create Leads">
				<group>
					<group>
						<field name="name" required="1" attrs="{'readonly': [('lead_id', '!=',False)]}"/>
					</group>
					<group>
						<field name="partner_id" attrs="{'readonly': [('lead_id', '!=',False)]}"/>
					</group>
				</group>
				<group class="oe_title" string="Selected Containers">
					<field name="container_ids" nolabel="1" attrs="{'readonly': [('lead_id', '!=',False)]}">
						<tree>
							<field name="name"/>
							<field name="content_type_id"/>
							<field name="container_specific" invisible="1"/>
							<field name="total_number_of_pieces" />
							<field name="net_weight"/>
							<field name="forecast_sale_price"/>
						</tree>
					</field>
				</group>
				<group><field name="lead_id" invisible="1"/> </group>
				<footer>
					<button name="action_create_lead" string="Create Lead" type="object" class="btn btn-sm btn-primary" attrs="{'invisible': [('lead_id', '!=',False)]}"/>
					<button string="Cancel" class="btn btn-sm btn-default" special="cancel" attrs="{'invisible': [('lead_id', '!=',False)]}"/>
					<field name="note" readonly="1" class="alert alert-success" role="alert"  attrs="{'invisible': [('lead_id', '=', False)]}"/>
					<button name="action_open_lead" style="font-size: 18px;" attrs="{'invisible': [('lead_id', '=', False)]}" string="Open Lead" type="object" class="btn btn-sm btn-primary"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="create_lead_from_dc_action" model="ir.actions.act_window">
		<field name="name">Create Lead</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">create.lead.rc</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="create_leads_wizard_form"/>
		<field name="target">new</field>
	</record>
</odoo>