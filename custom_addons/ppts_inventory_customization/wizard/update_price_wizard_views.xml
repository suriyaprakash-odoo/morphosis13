<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_update_purchase_order" model="ir.ui.view">
        <field name="name">update.purchase.order.view.form</field>
        <field name="model">update.purchase</field>
        <field name="arch" type="xml">
            <form string="Update Purchase Order">
            	<sheet>
					<group>
						<group>
							<field name="purchase_order_id" options="{'no_create_edit': True}" style="pointer-events: none;" />
						</group>
						<field name="purchase_line_ids">
							<tree editable="bottom" create="false">
								<field name="product_id" options="{'no_create_edit': True}" style="pointer-events: none;" />
								<field name="product_quantity" style="pointer-events: none;" />
								<field name="quoted_price" style="pointer-events: none;" />
								<field name="final_price" required="1" />
								<field name="id_purchase_order_line" invisible="1" />
							</tree>
						</field>
					</group>
				</sheet>
                <footer>
                    <button name="update_purchase_order" string="Update" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
			</form>
		</field>
	</record>


	<record id="action_update_purchase_order" model="ir.actions.act_window">
		<field name="name">Update Purchase Order</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">update.purchase</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_update_purchase_order" />
		<field name="target">new</field>
	</record>

</odoo>