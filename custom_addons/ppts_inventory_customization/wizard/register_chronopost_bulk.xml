<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_register_chronopost_bulk" model="ir.ui.view">
        <field name="name">update.chronopost.bulk.view.form</field>
        <field name="model">update.chronopost.bulk</field>
        <field name="arch" type="xml">
            <form string="Register chronopost">
            	<sheet>
					<group>
						<group>
							<field name="barcode" placeholder="Scan or enter the Barcode" required="1"/>
						</group>
						<field name="line_ids">
							<tree editable="bottom" create="false">
								<field name="project_id" required="1" options="{'no_create_edit': True}"/>
								<field name="container_id" required="1" options="{'no_create_edit': True}"/>
								<field name="shipping_id" required="1" options="{'no_create_edit': True}"/>
								<field name="logistics_partner_id"/>
								<field name="chronopost_number" required="1"/>
																
								<field name="have_batteries" />
								<field name="batteries_weight" attrs="{'required':[('have_batteries','!=',False)]}"/>
								<field name="not_received" />
								<field name="not_received_reason" attrs="{'required':[('not_received','!=',False)]}"/>

								<field name="source_location_id" required="1" options="{'no_create_edit': True}"/>
								
								<field name="destination_location_id" attrs="{'required':[('not_received','=',False)]}" options="{'no_create_edit': True}"/>
								
<!--								<field name="barcode_available" invisible="1"/>-->
							</tree>
						</field>
					</group>
				</sheet>
                <footer>
                    <button name="register_chronopost_bulk" string="Register Chronopost" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
			</form>
		</field>
	</record>


	<record id="action_chronopost_shipments" model="ir.actions.act_window">
		<field name="name">Register chronopost</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">update.chronopost.bulk</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_register_chronopost_bulk" />
		<field name="target">new</field>
	</record>

	<menuitem name="Chronopost Shipment" id="menu_chronopost_shipments_bulk" parent="ppts_logistics.menu_logistics_custom" action="action_chronopost_shipments" groups='ppts_logistics.group_logistics_user' sequence="8"/>

</odoo>