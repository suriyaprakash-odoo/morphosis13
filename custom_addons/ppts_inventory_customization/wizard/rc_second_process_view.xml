<?xml version="1.0"?>
<odoo>
	<record id="second_process_wizard_form" model="ir.ui.view">
		<field name="name">second.process.rc.form</field>
		<field name="model">second.process.rc</field>
		<field name="arch" type="xml">
			<form string="Second Process">
				<group>
					<group>
						<field name="partner_id" required="1"/>
						<field name="action_type" required="1"/>
					</group>
					<group>
						<field name="location_id" required="1"/>
					</group>
				</group>
				<group class="oe_title" string="Selected Containers">
					<field name="container_ids" nolabel="1">
						<tree>
							<field name="name"/>
							<field name="content_type_id"/>
							<field name="container_type_id"/>
							<field name="max_weight"/>
							<field name="net_weight"/>
						</tree>
					</field>
				</group>
				<footer>
					<button name="action_second_process" string="Second Process" type="object" class="btn btn-sm btn-primary"/>
					<button string="Cancel" class="btn btn-sm btn-default" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="second_process_from_rc_action" model="ir.actions.act_window">
		<field name="name">Second Process</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">second.process.rc</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="second_process_wizard_form"/>
		<field name="target">new</field>
	</record>
</odoo>