<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_unload_truck" model="ir.ui.view">
        <field name="name">unload.truck.view.form</field>
        <field name="model">unload.truck</field>
        <field name="arch" type="xml">
            <form string="Unload Truck">
            	<sheet>
					<group>
						<group>
							<field name="actual_containers" readonly="1"/>	
							<field name="container_seal_number" readonly="1"/>
							<field name="truck_container_number" readonly="1"/>
						</group>
						<group>
							<field name="received_containers" required="1"/>
							<field name="is_container_seal_match" />
							<field name="is_truck_container_number_match"/>
							<div>
								<field name="is_truck_container_number_match_mail_sent" invisible="1"/>
								<field name="mail_status" invisible="1"/>
						
								<div attrs="{'invisible': [('is_truck_container_number_match_mail_sent', '=', True)]}">
									<button name="action_send_container_mismatch" id="action_send_container_mismatch"
											string="Notify Developer" class="btn-primary" type="object" attrs="{'invisible': [('is_truck_container_number_match', '!=', True)]}"/>
								</div>
								<div attrs="{'invisible': [('mail_status', '=', False)]}">
									<span style="color:blue;font-weight:bold;">Mail sent</span>
								</div>
							
								
							</div>
						</group>
						<group>
							<field name="worker_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
							<field name="manual_time" widget="float_time" />
						</group>
						<field name="container_details_line_ids">
							<tree editable="bottom" create="false">
								<field name="container_type_id" style="pointer-events: none;" />
								<field name="container_count" style="pointer-events: none;"/>
								<field name="container_length" style="pointer-events: none;" />
								<field name="container_width" style="pointer-events: none;" />
								<field name="container_height" style="pointer-events: none;" />
								<field name="final_container_height"/>
								<field name="line_id" invisible='1'/>
							</tree>
						</field>
					</group>
				</sheet>
                <footer>
                	<!-- <button name="stop_timer" string="Stop Timer" type="object" class="btn-primary"/> -->
                    <button name="unload_truck" string="Update" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
			</form>
		</field>
	</record>


	<record id="action_unload_truck" model="ir.actions.act_window">
		<field name="name">Unload Truck</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">unload.truck</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_unload_truck" />
		<field name="target">new</field>
	</record>

</odoo>