<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_load_truck" model="ir.ui.view">
        <field name="name">load.truck.view.form</field>
        <field name="model">load.truck</field>
        <field name="arch" type="xml">
            <form string="Load Truck">
            	<sheet>
					<group>
						<group>
							<field name="sale_logistics_weight_at_entry" required="1"/>	
							<field name="truck_licence_plate" required="1" />
						</group>
						<group>
							<field name="sale_logistics_entry_date_time" required="1" />
						</group>
					</group>
				</sheet>
                <footer>
                    <button name="load_truck" string="Load" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
			</form>
		</field>
	</record>


	<record id="action_load_truck" model="ir.actions.act_window">
		<field name="name">Load Truck</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">load.truck</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_load_truck" />
		<field name="target">new</field>
	</record>

</odoo>