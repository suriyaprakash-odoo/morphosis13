<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record model="ir.module.category" id="module_category_production">
			<field name="name">Production</field>
			<field name="sequence">10</field>
		</record>

		<record id="group_production_supervisor" model="res.groups">
			<field name="name">Supervisor</field>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
			<field name="category_id" ref="module_category_production"/>
		</record>

		<record id="group_production_manager" model="res.groups">
			<field name="name">Manager</field>
			<field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('group_production_supervisor'))]"/>
			<field name="category_id" ref="module_category_production"/>
		</record>

		<record id="container_view_all_containers" model="ir.rule">
			<field name="name">Production Manager</field>
			<field ref="model_project_container" name="model_id"/>
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups" eval="[(4, ref('ppts_inventory_customization.group_production_manager'))]"/>
		</record>

		<record id="container_view_supervisor_rule" model="ir.rule">
			<field name="name">Production Supervisor</field>
			<field ref="model_project_container" name="model_id"/>
			 <field name="domain_force">['|',('supervisor_id','=',False),('supervisor_id.user_id.id','=',user.id)]</field>
			<field name="groups" eval="[(4, ref('ppts_inventory_customization.group_production_manager'))]"/>
		</record>

