<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="purchase_order_form_inherited" model="ir.ui.view">
		<field name="name">purchase.order.form</field>
		<field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_form"/>
		<field name="arch" type="xml">
			<xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
				<page string = 'Revision History'>
					<field name = "purchase_revision_ids">
						<tree create="false">
							<field name="po_number" readonly='1' />
							<field name="partner_id" readonly='1' />
						</tree>
						<form>
							<group>
								<group>
									<field name="po_number" style="pointer-events: none;" />
									<field name="partner_id" style="pointer-events: none;" />
								</group>
								<field name='revision_product_line_ids' >
									<tree create="false">
										<field name = "product_id" style="pointer-events: none;" />
										<field name = "description" style="pointer-events: none;" />
										<field name = "product_qty" style="pointer-events: none;" />
										<field name = "product_uom" style="pointer-events: none;" />
										<field name = "price_unit" style="pointer-events: none;" />
										<field name = "currency_id" invisible="1" style="pointer-events: none;" />
										<field name = "price_subtotal" style="pointer-events: none;" />
									</tree>
								</field>
							</group>
						</form>
					</field>
				</page>
			</xpath>
		</field>
	</record>
</odoo>
