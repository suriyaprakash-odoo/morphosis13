<?xml version="1.0"?>
<odoo>

	<record id="create_container_wizard_form_inherit" model="ir.ui.view">
		<field name="name">create.container.wizard.form</field>
		<field name="model">create.container.wizard</field>
		<field name="inherit_id" ref="ppts_inventory_customization.create_container_wizard_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='partner_id']" position="after">
				<field name="refining_container_id"  options="{'no_create_edit': True}" attrs="{'required':[('is_refining','!=', False)], 'invisible':[('is_refining','=', False)]}"/>
			</xpath>
		</field>
	</record>

	<record id="project_container_form_view_inherit_refining" model="ir.ui.view">
		<field name="name">project.container.form</field>
		<field name="model">project.container</field>
		<field name="inherit_id" ref="ppts_inventory_customization.project_container_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='company_id']" position="after">
				<field name="is_refining" invisible="1"/>
				<field name="refining_process" attrs="{'required':[('is_refining','!=', False)], 'invisible':[('is_refining','=', False)]}"/>
			</xpath>

			<xpath expr="//div[@name='button_box']" position="inside">
				<button name="action_create_mo" string="Create MO" class="oe_stat_button" icon="fa-cogs" type="object" attrs="{'invisible':['|',('refining_process','!=','mo'),('production_id' , '!=' , False)]}"/>
				<button name="action_open_mo" string="Open MO" class="oe_stat_button" icon="fa-cog" type="object" attrs="{'invisible':['|',('refining_process','!=','mo'),('production_id' , '=' , False)]}"/>
			</xpath>

			<xpath expr="//field[@name='spot_value']" position="after">
				<field name="refining_container_id" invisible="1"/>
			</xpath>


			<xpath expr="//page[last()]" position="after">
				<page string="Manufacturing Details" attrs="{'invisible':[('refining_process','!=','mo')]}">
					<group>
						<field name="production_id"/>
					</group>
				</page>
			</xpath>
		</field>
	</record>

	<record id="project_container_form_view_inherit_new_refine" model="ir.ui.view">
		<field name="name">project.container.form</field>
		<field name="model">project.container</field>
		<field name="inherit_id" ref="container_subcontracting.project_container_form_view_inherit_new"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='sub_contract']" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>

		</field>
	</record>
</odoo>