<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="customer_multi_payment_rule" model="ir.rule">
            <field name="name">Customer multi payment Rule</field>
            <field name="model_id" ref="model_customer_multi_payment"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
        </record>

        <record id="vendor_multi_payment_rule" model="ir.rule">
            <field name="name">Vendor multi payment Rule</field>
            <field name="model_id" ref="model_vendor_multi_payment"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
        </record>
        
</odoo>
