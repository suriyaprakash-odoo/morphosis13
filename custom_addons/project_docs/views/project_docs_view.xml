<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="project_doc_form" model="ir.ui.view">
		<field name="name">project.doc.form</field>
		<field name="model">project.docs</field>
		<field name="arch" type="xml">
			<form string="Project Doc">
				<sheet>
					<group>
						<field name="name"/>
						<field name="project_file" widget="pdf_viewer"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="project_doc_tree_view" model="ir.ui.view">
		<field name="name">project.doc.tree</field>
		<field name="model">project.docs</field>
		<field name="arch" type="xml">
			<tree string="Project Doc">
				<field name="name"/>
				<!--<field name="project_file" widget="pdf_viewer"/>-->
			</tree>
		</field>
	</record>

	<record id="action_project_doc" model="ir.actions.act_window">
		<field name="name">Documents</field>
		<field name="res_model">project.docs</field>
		<!--<field name="search_view_id" ref="project_entries_filters"/>-->
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem name="Documents" id="menu_project_docs"
			  parent="ppts_project_entries.menu_project_custom"
			  action="action_project_doc"
			  groups="ppts_inventory_customization.group_production_supervisor,ppts_inventory_customization.group_production_manager"/>
</odoo>