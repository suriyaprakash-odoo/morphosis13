<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sequence_production_lots_new" model="ir.sequence">
		<field name="name">Serial Numbers</field>
		<field name="code">stock.lot.serial.new</field>
		<field name="prefix">%(year)s/%(woy)s/</field>
		<field name="padding">4</field>
		<field name="number_next">1</field>
		<field name="number_increment">1</field>
		<field name="company_id" eval="False"/>
	</record>


	<record id="view_production_lot_form_inherited" model="ir.ui.view">
		<field name="name">stock.production.lot.form</field>
		<field name="model">stock.production.lot</field>
		<field name="inherit_id" ref="stock.view_production_lot_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<label for="purity"/>
				<div class="o_row">
					<field name="purity" style="max-width: 85px !important;"/>
					<span style="font-weight: bold; font-size: 14px;">â€°</span>
				</div>

			</xpath>
		</field>
	</record>

</odoo>
